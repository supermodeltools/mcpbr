{
  "name": "mcpbr-vscode",
  "displayName": "mcpbr - MCP Benchmark Runner",
  "description": "Run and visualize MCP server benchmarks directly from VS Code",
  "version": "0.1.0",
  "publisher": "greynewell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/greynewell/mcpbr"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "mcp",
    "benchmark",
    "model-context-protocol",
    "evaluation",
    "testing"
  ],
  "activationEvents": [
    "onCommand:mcpbr.runBenchmark",
    "onCommand:mcpbr.viewResults",
    "workspaceContains:**/mcpbr*.yaml",
    "workspaceContains:**/mcpbr*.yml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpbr.runBenchmark",
        "title": "Run Benchmark",
        "category": "mcpbr"
      },
      {
        "command": "mcpbr.viewResults",
        "title": "View Results",
        "category": "mcpbr"
      },
      {
        "command": "mcpbr.openConfig",
        "title": "Open Configuration",
        "category": "mcpbr"
      },
      {
        "command": "mcpbr.showStatus",
        "title": "Show Status",
        "category": "mcpbr"
      },
      {
        "command": "mcpbr.stopBenchmark",
        "title": "Stop Running Benchmark",
        "category": "mcpbr"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpbr",
          "title": "mcpbr",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "mcpbr": [
        {
          "id": "mcpbr.runs",
          "name": "Benchmark Runs"
        },
        {
          "id": "mcpbr.results",
          "name": "Results"
        },
        {
          "id": "mcpbr.config",
          "name": "Configuration"
        }
      ]
    },
    "configuration": {
      "title": "mcpbr",
      "properties": {
        "mcpbr.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter with mcpbr installed"
        },
        "mcpbr.defaultConfigPath": {
          "type": "string",
          "default": "",
          "description": "Default path to mcpbr configuration file"
        },
        "mcpbr.autoRefreshResults": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh results view when a benchmark completes"
        },
        "mcpbr.apiHost": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "mcpbr REST API server URL (if using API mode)"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "mcpbr.runBenchmark",
          "when": "view == mcpbr.runs",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  }
}
